<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.netease.hearttouch.htimagepicker.core.view.photoview.PhotoViewPager
        android:id="@+id/image_fullscreen_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"/>

    <RelativeLayout
        android:id="@+id/layout_action"
        android:layout_width="match_parent"
        android:layout_height="@dimen/pick_image_bottom_bar_height"
        android:layout_alignParentBottom="true"
        android:background="@color/pick_image_bottom_bar_bg_color">

        <TextView
            android:id="@+id/select_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/pick_image_horizontal_margin"
            android:text="@string/select"
            android:textColor="@color/pick_image_preview_button_disable"
            android:textSize="@dimen/pick_image_bottom_bar_text_size"/>

        <CheckBox
            android:id="@+id/cb_preview_image_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="-35dp"
            android:layout_toLeftOf="@+id/select_text"
            android:button="@drawable/selector_img_checkbox"
            android:checked="true"
            android:paddingRight="40dp"/>

    </RelativeLayout>

</RelativeLayout>