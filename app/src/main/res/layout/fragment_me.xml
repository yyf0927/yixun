<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_layout_bg"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:layout_marginTop="20dp"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/my_publish_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/my_publish"
            android:textAppearance="@style/CBText.Medium"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_row_left_right_margin"
            android:src="@drawable/icon_more_109"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/my_collection_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/my_collection"
            android:textAppearance="@style/CBText.Medium"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_row_left_right_margin"
            android:src="@drawable/icon_more_109"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/my_friends_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/my_friends"
            android:textAppearance="@style/CBText.Medium"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_row_left_right_margin"
            android:src="@drawable/icon_more_109"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color"/>
</LinearLayout>
