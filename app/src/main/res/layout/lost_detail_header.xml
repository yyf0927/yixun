<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        layout="@layout/detail_header"/>

    <com.netease.study.exercise.widget.FlashView
        android:id="@+id/flash_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lost_detail_list_lostname"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:background="#ffffff"
                android:ellipsize="end"
                android:gravity="bottom|left"
                android:maxLength="7"
                android:text="江丽丽"
                android:textColor="@color/cb_text_detail_gray"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/lost_detail_list_lostattrs"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="#ffffff"
                android:gravity="left|bottom"
                android:text="@string/lost_detail_attr"
                android:textColor="@color/cb_text_gray_dark"
                android:textSize="14sp"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/img_lost_list_desc"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/icon_book"/>

            <TextView
                android:id="@+id/lost_detail_list_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/img_lost_list_desc"
                android:background="#ffffff"
                android:singleLine="false"
                android:text="身高123cm，上身穿绿色T恤，有三只小熊图案，下身穿蓝色牛仔裤，脚穿白色nike系运动鞋，双眼皮，眼睛很大，圆脸，薄嘴唇，鼻翼左边有一颗痣。"
                android:textColor="#8c8888"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp">

            <ImageView
                android:id="@+id/img_lost_list_addr"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/icon_location"/>

            <TextView
                android:id="@+id/lost_detail_list_addr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/img_lost_list_addr"
                android:background="#ffffff"
                android:singleLine="false"
                android:text=""
                android:textColor="#8c8888"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/lost_detail_list_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="6dp"
            android:background="#ffffff"
            android:drawableLeft="@drawable/icon_phone_gray"
            android:paddingLeft="1.0dp"
            android:text="13897685432"
            android:textColor="@color/cb_text_gray"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/cb_bg_gray_light"/>

    <TextView
        android:id="@+id/lost_comment_cnt"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:background="@mipmap/bg_comment_num"
        android:paddingLeft="20dp"
        android:paddingTop="3dp"
        android:text="@string/comment_num"/>

    <TextView
        android:id="@+id/cb_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:drawablePadding="12dp"
        android:drawableTop="@drawable/icon_zanwu"
        android:gravity="center"
        android:paddingBottom="70dp"
        android:text="暂无内容"
        android:textAppearance="@style/CBText.Small.Gray"
        android:visibility="gone"/>
</LinearLayout>