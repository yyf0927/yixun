<?xml version="1.0" encoding="utf-8"?>
<com.netease.study.exercise.widget.CustomInsetsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="@color/white"
             android:fitsSystemWindows="true">

    <com.netease.study.exercise.widget.HrListView
        android:id="@+id/lost_detail_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="52dp"
        android:descendantFocusability="blocksDescendants"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:background="@color/cb_bg_gray_light"
        android:orientation="horizontal"
        android:paddingBottom="3dip"
        android:paddingTop="7dip">

        <EditText
            android:id="@+id/report_list_detail_message"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="5.0dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5.0dip"
            android:layout_marginTop="5.0dip"
            android:layout_weight="1.0"
            android:background="@color/white"
            android:focusable="true"
            android:hint="输入消息"
            android:imeOptions="actionSend|flagNoEnterAction"
            android:inputType="textCapSentences|textAutoCorrect|textMultiLine|textShortMessage"
            android:maxLength="255"
            android:maxLines="8"
            android:minHeight="30.0dip"
            android:textColorHint="#ffcccccc"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/report_list_detail_sendbtn"
            style="@style/CBButton.Drak"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="9dp"
            android:gravity="center"
            android:nextFocusLeft="@id/report_list_detail_message"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="14sp"/>
    </LinearLayout>
</com.netease.study.exercise.widget.CustomInsetsFrameLayout>
