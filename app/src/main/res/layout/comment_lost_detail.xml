<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/comment_list_headImg"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="8.5dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/comment_list_usname"
            android:layout_width="wrap_content"
            android:paddingTop="12dp"
            android:layout_height="37dp"
            android:gravity="left"
            android:textSize="14dp"
            android:textColor="@color/cb_text_gray"/>

        <TextView
            android:id="@+id/comment_list_time"
            android:layout_width="wrap_content"
            android:paddingTop="12dp"
            android:layout_height="37dp"
            android:gravity="right"
            android:textSize="12dp"
            android:textColor="@color/cb_text_gray_light"
            android:layout_alignTop="@id/comment_list_usname"
            android:layout_alignParentRight="true"/>

        <TextView
            android:id="@+id/comment_list_content"
            android:layout_width="match_parent"
            android:paddingTop="5dp"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:textSize="14dp"
            android:textColor="@color/cb_text_black"
            android:layout_below="@id/comment_list_usname"
            android:text=""/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/comment_list_content"
            >

            <com.netease.study.exercise.widget.FlowLayout
                android:id="@+id/images_flowlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>