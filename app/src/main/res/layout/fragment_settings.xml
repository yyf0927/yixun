<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/shape_layout_bg"
              android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:layout_marginTop="20dp"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/setting_personal_data_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/settings_personal_data"
            android:textAppearance="@style/CBText.Medium"/>

        <ImageView
            android:id="@+id/setting_pserson_data_more_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_row_left_right_margin"
            android:src="@drawable/icon_more_109"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/setting_pserson_data_more_iv">

        </ImageView>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/setting_user_pass_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/settings_user_pass"
            android:textAppearance="@style/CBText.Medium"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_row_left_right_margin"
            android:src="@drawable/icon_more_109"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/setting_about_us_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/settings_about_us"
            android:textAppearance="@style/CBText.Medium"/>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_row_left_right_margin"
            android:src="@drawable/icon_more_109"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/setting_make_fake_push"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/settings_make_fake_push"
            android:textAppearance="@style/CBText.Medium" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/setting_row_left_right_margin"
            android:src="@drawable/icon_more_109" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:layout_marginTop="15dp"
        android:background="@color/cb_divide_color"/>

    <RelativeLayout
        android:id="@+id/setting_cache_clear_rt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/cache_clear"
            android:textAppearance="@style/CBText.Medium" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color" />

    <LinearLayout
        android:id="@+id/setting_login_exit_lt"
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_row_height"
        android:background="@color/setting_row_bg_color"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/setting_login_exit_tip_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/setting_row_left_right_margin"
            android:text="@string/settings_login"
            android:textAppearance="@style/CBText.Medium"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/list_view_divider_dip"
        android:background="@color/cb_divide_color"/>
</LinearLayout>
