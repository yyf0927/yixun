<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <View
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/cb_bg_gray_light"/>

    <LinearLayout
        android:id="@+id/user_head"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="11dp"
            android:layout_marginBottom="9dp"
            android:layout_marginRight="11dp"
            android:background="#ffffff"
            >
        </ImageView>

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="4">
            <TextView
                android:id="@+id/head_user_name"
                android:layout_width="match_parent"
                android:textSize="16sp"
                android:text="佳佳的妈妈"
                android:textColor="#362e2b"
                android:gravity="center|left"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:background="#ffffff"/>
            <TextView
                android:id="@+id/head_time"
                android:textSize="12sp"
                android:text="2015-07-28 13:00"
                android:drawableLeft="@drawable/icon_time_logo"
                android:textColor="@color/cb_text_gray_light"
                android:layout_width="match_parent"
                android:gravity="center|left"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#ffffff"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>